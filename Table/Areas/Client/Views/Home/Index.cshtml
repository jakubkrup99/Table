@{
    ViewData["Title"] = "Rezerwacja Stolika online";
}
@model IEnumerable<RestaurantOutputDto>

<div class="d-flex flex-wrap gap-5 justify-content-center">
    @foreach(var restaurant in Model)
    {
        <div class="card border-0 shadow-sm rounded overflow-hidden text-center justify-content-center d-flex flex-column">
            <div>
                <img src="@restaurant.ImageUrl" class="card-img-top" style="width: 300px; height: 300px"  alt="Restaurant Image" />
            </div>

            <div >
                <h5 class="card-title text-dark text-uppercase fw-bold">@restaurant.Name</h5>
                <p class="text-muted mb-1"><i class="fas fa-map-marker-alt me-1"></i>@restaurant.Address</p>
                <p class="text-muted mb-3">@restaurant.City</p>

                <div class="d-flex justify-content-center align-items-center gap-3 text-dark">
                    <div class="text-center">
                        <p class="mb-0 fw-bold">Opening</p>
                        <p>@restaurant.OpeningHour</p>
                    </div>
                    <div class="text-center">
                        <p class="mb-0 fw-bold">Closing</p>
                        <p>@restaurant.ClosingHour</p>
                    </div>
                    <div >
                        <a class="btn btn-primary">Zarezerwuj stolik</a>
                    </div>
                </div>
            </div>
        </div>

    }
</div>
